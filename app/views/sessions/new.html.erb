<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-box my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Login</h5>
          <%= form_for login_path,:url => login_create_path, :class => 'form box', :method => :post do %>
            <div class="form-label-group">
              <%= text_field :user, 'username', :class => 'form-control',placeholder: "Username", :id => 'loginUser' %>
            </div>
            <div class="form-label-group">
              <%= password_field :user, 'password', :class=> 'form-control' , placeholder: "Password", :id => 'loginPassword' %>
              <%= link_to 'Forgot Password', new_password_reset_path, :class => "btn btn-lg btn-outline-info btn-block" %>
            </div>
            <%= submit_tag 'Login', :class => 'btn btn-lg btn-outline-success btn-block text-uppercase', :id => 'login_submit' %>
            <hr class="my-4">
          <% end %>
          <%= button_to'Sign-up', new_user_path, :class => "btn btn-lg btn-secondary btn-block text-uppercase", method: :get, id: 'signup' %>
        </div>
      </div>
    </div>
  </div>
</div>
    <button type="button" class="btn btn-warning" onclick="leaveGame()">Leave Game</button>
  <% end %>
</div>
<div class = "end_buttons">
  <%= button_to  'End Game', game_session_path, method: :delete, :class => 'btn btn-danger', :id => "end_game_button"%>
</div>




            <% end %>
            <% @sinks.each do |sink|%>
              <li onclick="moveCard('<%= 'sink_' + raw(sink)%>', '<%=card_id%>')"> <%= raw(sink) %></li>
            <% end %>
            <% @decks.each do |deck| %>
              <li> <%= raw(deck) %></li>
            <% end %>
            <li onclick="moveCard('table', '<%=card_id%>')"> Place on table </li>
          </ul>
        </li>
      </ul>
    <% end %>
  </ul>
</div>



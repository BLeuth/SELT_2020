<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-box my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Please create a new game below!</h5>
          <%= form_for '/lobby', :url => '/lobby', :class => 'form box', :method => :post do %>
            <b>Choose number of decks:</b>
            <div class="deck-settings">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="deck" id="1d" value="1" checked>
                <label class="form-check-label" for="1d">
                  1 deck
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="deck" id="2d" value="2">
                <label class="form-check-label" for="2d">
                  2 decks
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="deck" id="3d" value="3">
                <label class="form-check-label" for="3d">
                  3 decks
                </label>
              </div>
            </div>
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" name = "shuffle" id="defaultChecked2" checked>
              <label class="custom-control-label" for="defaultChecked2">Pre-shuffled</label>
            </div>
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" name = "jokers" id="defaultChecked3" checked>
              <label class="custom-control-label" for="defaultChecked3">Jokers</label>
            </div>
            <hr class="my-4">
            <b>Choose number of sinks:</b>
            <div class="sink-settings">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="sink" id="1s" value="1" checked>
                <label class="form-check-label" for="1s">
                  1 sink
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="sink" id="2s" value="2">
                <label class="form-check-label" for="2s">
                  2 sinks
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="sink" id="3s" value="3">
                <label class="form-check-label" for="3s">
                  3 sinks
                </label>
              </div>
            </div>
            <hr class="my-4">
            <div class="form-group">
              <label for="starting_hand_size">Select starting hand size:</label>
              <select class="form-control" name = "hand_size" id="starting_hand_size">
                <option>0</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
                <option>6</option>
                <option>7</option>
              </select>
            </div>

            <%= submit_tag 'Go to Lobby', :class => 'btn btn-lg btn-primary btn-block ', :id => 'lobby_submit' %>
            <hr class="my-4">
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

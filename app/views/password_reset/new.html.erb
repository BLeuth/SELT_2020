
<div id="Div1">
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-box my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Reset Password</h5>
          <%= form_for '/password_reset', :url => '/password_reset',:class => 'form box', :method => :post do %>
            <div class="form-label-group">
              <%= text_field :user, 'email', :class => 'form-control',placeholder: "email", :id => 'ResetPasswordEmail1' %>
            </div>
              <input id="Reset password" type="button" class = 'btn btn-lg btn-success btn-block text-uppercase' value="Reset Password" onclick="switchVisible() "/>            <hr class="my-4">
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="Div2">
<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-box my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Reset Password</h5>
          <%= form_tag '/password_reset', :class => 'form box' do %>
            <div class="form-label-group">
              <%= text_field :user, 'email', :class => 'form-control',placeholder: "email", :id => 'ResetPasswordEmail2' %>
            </div>
            <table style="left: 50%">
              <tr>
                <td id = 'length'>&#10060;</td>
                <td id = 'lengthtext'>Contains atleast 8 characters</td>
              </tr>
              <tr>
                <td id = 'special'>&#10060;</td>
                <td id = 'specialtext'>Contains atleast 1 special character</td>
              </tr>
              <tr>
                <td id = 'number'>&#10060;</td>
                <td id = 'numbertext'>Contains atleast 1 number</td>
              </tr>
              <tr>
                <td id = 'match'>&#10060;</td>
                <td id = 'matchtext'>Passwords match</td>
              </tr>
            </table>
            <div class="form-label-group">
              <%= password_field :user, 'password', :class=> 'form-control' , placeholder: "Password",onkeyup: "pass2()", :id => 'resetPassword' %>
            </div>
            <div class="form-label-group" id = "backup">
              <%= password_field :user, 'password2', :class=> 'form-control', placeholder: "Password Confirmation",onkeyup: "check_pass2()",:id =>'resetPasswordConfirmation' %>
            </div>
            <%= submit_tag 'Change Password', :class => 'btn btn-lg btn-success btn-block text-uppercase', onclick: "check_blank2()", :id => 'resetPasswordButton'%>
            <hr class="my-4">
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




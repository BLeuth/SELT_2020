<h2>Sign-up</h2>

<%= form_tag users_path, :class => 'form' do %>
  <%= label :user, :username, 'User ID', :class => 'col-form-label' %>
  <%= text_field :user, 'username', :class => 'form-control', :id =>'signupUser' %>
  <%= label :user, :email, 'Email', :class => 'col-form-label' %>
  <%= text_field :user, 'email', :class => 'form-control', :id =>'signupEmail' %>
  <%= label :user, :password, 'Password', :class => 'col-form-label' %>
  <%= password_field :user, 'password', :class=> 'form-control', :id =>'signupPassword' %>
  <%= label :user, :password, 'Password Confirmation', :class => 'col-form-label' %>
  <%= password_field :user, 'password2', :class=> 'form-control', :id =>'signuppasswordConfirmation' %>
  <br/>
  <%= submit_tag 'Create my account', :class => 'btn btn-primary' , :id => 'signupCreate'%>
<% end %>
